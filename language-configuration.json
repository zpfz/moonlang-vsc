{
    "comments": {
        "lineComment": "#",
        "blockComment": ["#[[", "]]"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(function|class|if|elif|else|while|for|try|catch)\\b.*[:{]\\s*$",
            "end": "^\\s*(end|\\})\\s*$"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(function|class|if|elif|else|while|for|try|catch|finally)\\b.*[:{]\\s*$",
        "decreaseIndentPattern": "^\\s*(end|elif|else|catch|finally|\\})\\b"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(function|class|if|elif|else|while|for|try|catch|finally)\\b.*:\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": ".*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*\\}\\s*$",
            "action": { "indent": "outdent" }
        }
    ],
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
